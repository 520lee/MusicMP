/* pages/musics/detail/detail.wxss */
.container{
  display: flex;
  flex-direction: column;
}

.bg{
  width: 100%;
  height: 100%;
  position: absolute;
  filter: blur(20px);
}

.name{
  color: #fff;
  margin: 30rpx auto;
  z-index: 10;
}

.singer{
  color: #fff;
  font-size: 15px;
  margin: -25rpx auto;
  z-index: 10;
}

.img-box{
  width: 300rpx;
  height: 300rpx;
  margin: 120rpx auto;
  border-radius: 100%;
  overflow: hidden;
  animation: rotates 10s linear infinite;
}

.img{
   width: 300rpx;
  height: 300rpx; 
}

.box{
  width: 750rpx;
  height: 515rpx;
  z-index: 10;
  overflow: hidden;
}

.lrc-box{
  background-color:black;
  opacity:0.4;
  position:relative;
  top:0;
}

.lrc{
  font-size: 20px;
  margin: 0 auto;
  text-align:center;
  color: #8BE812;
}

.iconBar{
  width: 150px;
  height: 150px;
  margin: 35rpx auto;
}

.pre{
  display: inline-block;
  width: 50px;
  height: 50px;
}

.img-pre{
  width: 50px;
  height: 50px;
}

.play-box{
  display: inline-block;
  width: 50px;
  height: 50px;
}

.play{
  width: 50px;
  height: 50px;
}

.next{
  display: inline-block;
  width: 50px;
  height: 50px;
}

.img-next{
  width: 50px;
  height: 50px;
}

@keyframes rotates{
  from{
    transform: rotate(0deg);
  }
  to{
    transform: rotate(360deg);
  }
}